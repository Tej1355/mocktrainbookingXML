<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1"
        tools:context=".MainActivity"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="@string/please_select_source_location"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <Spinner
            android:id="@+id/source_locations1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:entries="@array/source_locations"
            android:layout_below="@+id/txt"

            android:background="@android:drawable/btn_dropdown"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_select_destination_location"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:id="@+id/tx"
            tools:ignore="RelativeOverlap" />
        <Spinner
            android:id="@+id/source_locations"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:entries="@array/source_locations"
            android:layout_below="@+id/txt"

            android:background="@android:drawable/btn_dropdown"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/book_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="425dp"
            android:layout_marginEnd="81dp"
            android:onClick="mainactivity4"
            android:text="Get Date" />
<!--
android:onClick="mainactivity4"-->



    </RelativeLayout>

</RelativeLayout>